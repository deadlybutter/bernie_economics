<div class="plan">
  <div class="plan-header" style="background-image: url({{this.image}})">
    <div class="container">
      <h1>{{this.plan}}</h1>
    </div>
  </div>
  <div class="container plan-details">
    {{#if this.cost}}
      <h3 class="plan-cost">{{#if this.add_the}}The {{/if}}{{this.plan}} will cost {{this.cost}} {{this.cost_timeframe}}.</h3>
    {{/if}}
    {{#unless this.ignore_cta}}
      <h1 class="plan-cta">This is how we pay for it.</h1>
    {{/unless}}
    <div class="row">
      <div class="col-md-6 plan-figures plan-funding">
        <h3>Revenue will be generated by</h3>
        {{#each this.funding}}
          <h1 class="cursive">{{this}}</h1>
        {{/each}}
      </div>
      <div class="col-md-6 plan-figures plan-revenue">
        <h3>Which will create approximately</h3>
        <h1 class="cursive">{{this.revenue}} {{this.revenue_timeframe}}</h1>
      </div>
    </div>
    <a target="_blank" class="plan-more_info" href="{{this.more_info}}">Read more details here</a>
  </div>
</div>
{{> spacer}}
